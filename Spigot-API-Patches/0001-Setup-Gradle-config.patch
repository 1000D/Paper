new file mode 100644
index 00000000..aa1f09ec
--- /dev/null
+++ b/build.gradle
@@ -0,0 +1,62 @@
+apply plugin: "maven-publish"
+
+dependencies {
+    compile "commons-lang:commons-lang:2.6"
+    compile "com.googlecode.json-simple:json-simple:1.1.1"
+
+    // Bundled with Minecraft, shouldn't ever change
+    compile "com.google.code.findbugs:jsr305:1.3.9"
+
+    // Bundled with Minecraft, should be kept in sync
+    compile "com.google.guava:guava:21.0"
+    compile "com.google.code.gson:gson:2.8.0"
+
+    compile "org.yaml:snakeyaml:1.18"
+    compile "net.md-5:bungeecord-chat:1.12-SNAPSHOT"
+
+    testCompile "junit:junit:4.12"
+    testCompile "org.hamcrest:hamcrest-library:1.3"
+}
+
+shadowJar {
+    baseName = "paper-api"
+    classifier = null
+    version = paperVersion
+}
+
+task sourceJar(type: Jar) {
+    from sourceSets.main.allJava
+}
+
+task javadocJar(type: Jar, dependsOn: "javadoc") {
+    from javadoc.destinationDir
+}
+
+publishing {
+    publications {
+        mavenJava(MavenPublication) {
+            artifactId project.artifactId
+            from components.java
+
+            artifact sourceJar {
+                classifier "sources"
+            }
+
+            artifact javadocJar {
+                classifier "javadoc"
+            }
+        }
+    }
+
+    repositories {
+        if (paperVersion.endsWith("SNAPSHOT")) {
+            maven {
+                url "https://repo.destroystokyo.com/repository/maven-snapshots/"
+            }
+        } else {
+            maven {
+                url "https://repo.destroystokyo.com/repository/maven-releases/"
+            }
+        }
+    }
+}
